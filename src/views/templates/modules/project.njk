{% from "components/project/project-audio.njk" import audio as audio %}
{% from "components/project/project-author.njk" import author as author %}
{% from "components/project/project-gallery.njk" import gallery as gallery %}
{% from "components/project/project-img.njk" import img as img %}
{% from "components/project/project-interview.njk" import interview as interview %}
{% from "components/project/project-text.njk" import text as text %}
{% from "components/project/project-title.njk" import title as title %}
{% from "components/project/project-location.njk" import location as location %}
{% from "components/project/project-video.njk" import video as video %}

{% from "components/project/project-next.njk" import nextProject as nextProject %}



{% set work = projects[projectIndex] %}



<div class="project-page">

    <div class="project js-content-height">


        {# HEADER #}
        <div class="project-header">

            {# TITLE #}
            {{ title(work.title) }}

            {# LOCATION #}
            {{ location(work.location) }}
            
        </div>


        {# CONTENT #}
        <div class="project-content">

            {# author #}
            {{ author(work.author) }}


            {% for item in work.content %}

                {% if item.type == 'text' %}

                    {# TEXT #}
                    {{ text(item.text) }}

                {% elif item.type == 'gallery' %}

                    {# GALLERY #}
                    {{ gallery(item.gallery) }}

                {% elif item.type == 'img' %}

                    {# IMAGE #}

                    {{ img(item) }}

                {% elif item.type == 'video' %}

                    {# VIDEO #}
                    {{ video(item.video) }}

                {% elif item.type == 'audio' %}

                    {# AUDIO #}
                    {{ audio(item.audio) }}

                {% elif item.type == 'interview' %}

                    {# INTERVIEW #}
                    {{ interview(item.interview, item.q_name, item.a_name) }}

                {% endif %}

            {% endfor %}

            {% set nrOfProjects = projects | length %}


            {% if projectIndex < nrOfProjects - 1 %}
                {# NEXT PROJECT #}
                {{ nextProject('./contribution_' + (projectIndex + 2) + '.html') }}
                {% include "components/project/project-next.njk" %}
            {% endif %}

    </div>

</div>
