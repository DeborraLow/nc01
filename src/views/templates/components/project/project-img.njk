{% from "components/project/project-caption.njk" import caption as caption %}


{% macro img(item, projectFolder) %}
	<figure class="project-img-container">

		<picture>
	  		<source media="(min-width: 550px)" srcset="./assets/img/projects/{{ projectFolder }}/m/content/{{ item.src }}">
	    	<img class="project-img" src="./assets/img/projects/{{ projectFolder }}/s/content/{{ item.src }}" alt="#">
	    </picture>

    	
    	{{ caption(item) }}

    </figure>
{% endmacro %}
