{% from "components/general/text-multi-lang.njk" import text_multi_lang as text_multi_lang %}


{% macro interview(interview, q_name, a_name) %}

	<div class="project-interview">

	
		{% for item in interview %}

			{% if item.type == 'question' %}

				{% set name = q_name %}

	        {% elif item.type == 'answer' %}

	        	{% set name = a_name %}

	        {% endif %}

	        <div class="project-interview-item">
		        <div class="project-interview-person">
			        {{ name }}
			    </div>
			    <div class="project-interview-text">
			        {{ text_multi_lang(item.text, item.text_in) }}
			    </div>
			</div>
		    

		{% endfor %}
	
	</div>
	
{% endmacro %}