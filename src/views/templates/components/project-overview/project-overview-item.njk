{% macro projectOverview(creator, type, title, text, img, index) %}

{% set href =  "./project_" + index + ".html" %}

    <li class="project-overview-item">
        <a href="{{ href }}">
            
            <div class="saturated-img-container">
                <div class="project-img-overlay"></div>
                <img class="project-img-saturation" src="{{ img }}" alt="{{ title }}">
                <img class="project-img-grayscale" src="{{ img }}" alt="{{ title }}">
            </div>


            <div class="project-title-and-text">
                <h2 class="project-title">{{ title }}</h2>
                <p class="project-text">{{ text }}</p>
            </div>


            <div class="project-creator-and-type">
                <div class="project-creator">{{ creator }}</div>
                <div class="project-type">[{{ type }}]</div>
            </div>

        </a>
    </li>

{% endmacro %}
