{% macro projectOverview(author, title, lead, img, index, href) %}

    <li class="project-overview-item">
        <a href="{{ href }}">
            
            <div class="project-overview-img saturated-img-container">
                <img class="saturated-img-saturation js-load-img" src="{{ img }}" alt="{{ title }}" data-src="">
                <img class="saturated-img-grayscale js-load-img" src="{{ img }}" alt="{{ title }}" data-src="">
            </div>


            <div class="project-overview-title-w-lead">
                <h2 class="project-overview-title">{{ title }}</h2>
                <p class="project-overview-lead">{{ lead|safe }}</p>
            </div>

            
            <div class="project-overview-author">{{ author }}</div>
            
        </a>
    </li>

{% endmacro %}
